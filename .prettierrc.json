{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.go",
            "options": {
                "parser": "go",
                "tabWidth": 4,
                "useTabs": true
            }
        },
        {
            "files": [
                "*.md",
                "*.mdx"
            ],
            "options": {
                "printWidth": 80,
                "proseWrap": "always"
            }
        },
        {
            "files": [
                "*.yml",
                "*.yaml"
            ],
            "options": {
                "tabWidth": 2,
                "singleQuote": false
            }
        }
    ]
}